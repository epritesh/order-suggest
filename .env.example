# Zoho Configuration
NEXT_PUBLIC_ZOHO_ORG_ID=your_zoho_org_id
NEXT_PUBLIC_ZOHO_APP_ID=your_zoho_app_id
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_CATALYST_FUNCTION_URL=https://<your-catalyst-domain>/<function-endpoint>
ALLOWED_ORIGIN=https://ordersuggest-uztpzhml.onslate.com

# Feature Flags
NEXT_PUBLIC_ENABLE_MOCK_DATA=true
NEXT_PUBLIC_DEBUG_MODE=false

# Order Calculation Settings
NEXT_PUBLIC_HIGH_PRIORITY_THRESHOLD=0.8
NEXT_PUBLIC_MEDIUM_PRIORITY_THRESHOLD=0.6
NEXT_PUBLIC_LOW_PRIORITY_THRESHOLD=0.4

# SKU Filtering (comma-separated prefixes to filter out)
NEXT_PUBLIC_FILTERED_SKU_PREFIXES=0-,800-,2000-

# Zoho OAuth and APIs (required for live data)
ZOHO_ORG_ID=your_zoho_org_id
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token

# Base URLs (override per data center if needed)
# Default accounts base is https://accounts.zoho.com; use .eu/.in/.au if applicable
ZOHO_ACCOUNTS_BASE=https://accounts.zoho.com
ZOHO_BOOKS_BASE=https://books.zoho.com/api/v3
ZOHO_INVENTORY_BASE=https://inventory.zoho.com/api/v1